@{
}
@model IEnumerable<ToDoList.Models.list>


<div id="PopUp">

</div>
<h5 class="text-center">List</h5>
<br>

<table class="table table-bordered table-hover">
    <tr>
        <th>
            Item
        </th>
        <th>
            Price
        </th>
        <th>
            Description
        </th>
        <th>
            <button type="button" class="btn btn-primary" data-toggle="ajax-modal" data-target="#AddItem" data-url="@Url.Action("Create")">Create</button>

        </th>

    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Item)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                <div role="group" class="w-60 btn-group">
                    <a asp-controller="Home" asp-action="Edit" asp-route-id="@item.Id" class=" btn btn-sm btn-primary"><i class="bi bi-pencil-square"></i>Edit</a>
                    <a asp-controller="Home" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger"><i class="bi bi-trash-fill"></i>Delete</a>
                </div>
            </td>

        </tr>
    }
</table>
