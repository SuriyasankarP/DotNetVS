@{
}
@model IEnumerable<ToDoList.Models.list>


<div id="PopUp">

</div>
<h2 class="text-center">List</h2>
<br>

<table class="table table-bordered table-hover">
    <tr>
        <th>
            Item
        </th>
        <th>
            Price
        </th>
        <th>
            Description
        </th>
        <th>
            <button type="button" class="btn btn-primary" data-toggle="ajax-modal" data-target="#AddItem" data-url="@Url.Action("Create")">Create</button>

        </th>

    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Item)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                <div role="group" class="w-60 btn-group">
                    <div style="display:flex; gap:10px;" >
                        <button type="button" class="btn btn-primary" data-toggle="ajax-modal" data-target="#AddItem" data-url="@Url.Action($"Edit/{item.Id}")">Edit</button>

                        <button type="button" class="btn btn-danger" data-toggle="ajax-modal" data-target="#AddItem" data-url="@Url.Action($"Delete/{item.Id}")">Delete</button>

                    </div>
                    
                </div>
            </td>

        </tr>
    }
</table>
