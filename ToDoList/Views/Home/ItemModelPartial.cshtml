
@model list

<div class="modal" id="AddItem">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="AddItemLabel">Add Employee</h4>
                <button type="button" class="close" data-dismiss="modal"></button>
                <span>X</span>
            </div>
            <div class="modal-body">

                <form action="/Home/Create">
                    <div class="form-group">
                        <label asp-for="Item">Item</label>
                        <input type="text" class="form-control" asp-for="Item" placeholder="Enter Item">
                        <span asp-validation-for="Item" class="alert-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Price">Price</label>
                        <input type="text" class="form-control" asp-for="Price" placeholder="Price">
                        <span asp-validation-for="Price" class=" alert-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description">Description</label>
                        <input type="text" class="form-control mb-3" asp-for="Description" placeholder="Enter Description">
                        <span asp-validation-for="Description" class=" alert-danger"></span>
                    </div>

                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" data-save="modal">Save</button>
            </div>


        </div>

    </div>

</div>
